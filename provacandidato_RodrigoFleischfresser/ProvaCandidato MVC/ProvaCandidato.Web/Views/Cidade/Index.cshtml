@model ProvaCandidato.Models.CidadeViewModel

@using (Html.BeginForm("Insert", "Cidade", FormMethod.Get))
{
    <div class="col-lg-12">
        <button class="btn btn-success float-right" title="Adicionar Cidade" style="margin-left: 1010px;margin-bottom: 40px;height: 50px;width: 50px;"><i class="fas fa-plus"></i></button>
    </div>
}

@if (TempData["UserMessage"] != null)
{
    TempData["UserMessage"].ToString();
}

<table class="table">
    <thead>
        <tr>
            <th class="text-center">Código</th>
            <th>Nome</th>
            <th class="">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CidadeViewModels)
        {
            <tr>
                <td>@item.Codigo</td>
                <td> @item.Nome</td>
                <td class="float-right"><a class="btn btn-success" href="/Cidade/Update/@item.Codigo"><i class="fas fa-user-edit"></i></a></td>
                <td><a class="btn btn-danger" href="/Cidade/Delete/@item.Codigo"><i class="fas fa-user-times"></i><a /></td>
            </tr>
        }
    </tbody>
</table>
